<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  <nlog>
    <targets>
      <target name="console" type="Console" layout="${message}" />
      <target name="debugger" type="Debugger" layout="${message}"/>
      <target name="file" type="File" layout="${longdate} ${logger} ${message}" fileName="${basedir}/logs/${shortdate}_log.txt" />
    </targets>
    <rules>
      <logger name="*" minlevel="Debug" writeTo="console,debugger,file" />
    </rules>
  </nlog>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
      
    </startup>
  <appSettings>
    <add key="InputDir" value="in"/>
    <add key="OutputPath" value="out\result.txt"/>
  </appSettings>
</configuration>